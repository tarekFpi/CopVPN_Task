<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_8sdp"
    android:layout_margin="@dimen/_7sdp"
    app:cardMaxElevation="@dimen/_8sdp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/taskUpdteIcons"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_edit_24"/>

        <LinearLayout
            android:id="@+id/layout_id"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/checkbox_delete"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:id="@+id/text_taskTitle"
                android:text="Title"/>

            <TextView
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="bold"
                android:id="@+id/text_taskBody"
                android:text="Body"/>

            <TextView
                android:textColor="#F700FF"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="bold"
                android:id="@+id/text_taskDate"
                android:text="Date"/>

            <TextView
                android:textColor="#F700FF"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="bold"
                android:id="@+id/text_taskTime"
                android:text="Time"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>